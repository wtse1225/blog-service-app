<div class="row">
    <div class="col-md-12">
        <h2>
            Posts
            <a href="/posts/add" class="btn btn-success pull-right">Add Post</a>
        </h2>
        <hr />

        <div class="table-responsive">
            <table class="table">
                <thread>
                    <tr>
                        <th>Post ID</th>
                        <th>Title</th>
                        <th>Post Date</th>
                        <th>Category</th>
                        <th>Published</th>
                        <th></th>
                    </tr>
                </thread>

                <!-- load each post's data using handlebars -->
                {{#each posts}}
                <tbody>
                    <td>{{id}}</td>
                    <td>{{title}}</td>
                    <td>{{#formatDate postDate}}{{/formatDate}}</td> <!--{{postDate}}-->
                    <td><a href="/posts?category={{category}}">{{category}}</a></td>
                    <td>{{published}}</td>
                    <td><a href="/post/delete/{{id}}" class="btn btn-danger">remove</a></td>
                </tbody>
                {{/each}}
            </table>
        </div>     
    </div>
    <!-- display message if there are no posts -->
    {{#unless posts}} 
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
    {{/unless}} 
</div>


