<div class="row">
    <div class="col-md-12">
        <h2>
            Categories
            <a href="/categories/add" class="btn btn-success pull-right">Add Category</a>
        </h2>
        <hr />

        <div class="table-responsive">
            <table class="table">
                <thread>
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                        <th></th>
                    </tr>
                </thread>

                <!-- load each category's data using handlebars -->
                {{#each categories}}
                <tbody>
                    <td><a href="/posts?category={{id}}">{{id}}</a></td>
                    <td><a href="/posts?category={{id}}">{{category}}</a></td>
                    <td><a href="/categories/delete/{{id}}" class="btn btn-danger">remove</a></td>
                </tbody>
                {{/each}}
            </table>
        </div>        
    </div>
    <!-- display message if there are no posts -->
    {{#unless categories}} 
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
    {{/unless}} 
</div>
